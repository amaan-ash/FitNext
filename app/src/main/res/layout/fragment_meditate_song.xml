<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MeditateSongFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

       <TextView
           android:id="@+id/headline"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="MEDITATION SONGS"
           android:textSize="30sp"
           android:textAlignment="center"
           android:fontFamily="@font/muli_black"
           android:background="@color/black"
           android:textColor="@color/white"
           android:padding="10dp"/>


    <TextView
        android:id="@+id/body32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/underline"
        android:layout_below="@+id/headline"
        android:text="Acoustic Guitar:"
        android:fontFamily="@font/muli"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/play1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body32"
        android:text="Play"/>

    <Button
        android:id="@+id/pause1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body32"
        android:translationX="50dp"
        android:layout_toEndOf="@id/play1"
        android:text="Pause"/>

    <Button
        android:id="@+id/stop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body32"
        android:translationX="100dp"
        android:layout_toEndOf="@id/pause1"
        android:text="Stop"/>

    <TextView
        android:id="@+id/body33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/play1"
        android:background="@color/underline"
        android:text="Fire:"
        android:fontFamily="@font/muli"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/play2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body33"
        android:text="Play"/>

    <Button
        android:id="@+id/pause2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body33"
        android:translationX="50dp"
        android:layout_toEndOf="@id/play2"
        android:text="Pause"/>

    <Button
        android:id="@+id/stop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body33"
        android:translationX="100dp"
        android:layout_toEndOf="@id/pause2"
        android:text="Stop"/>

    <TextView
        android:id="@+id/body34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/play2"
        android:background="@color/underline"
        android:text="Waterfall:"
        android:fontFamily="@font/muli"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/play3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body34"
        android:text="Play"/>

    <Button
        android:id="@+id/pause3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body34"
        android:translationX="50dp"
        android:layout_toEndOf="@id/play3"
        android:text="Pause"/>

    <Button
        android:id="@+id/stop3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body34"
        android:translationX="100dp"
        android:layout_toEndOf="@id/pause3"
        android:text="Stop"/>

    <TextView
        android:id="@+id/body35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/play3"
        android:background="@color/underline"
        android:text="Whale:"
        android:fontFamily="@font/muli"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/play4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body35"
        android:text="Play"/>

    <Button
        android:id="@+id/pause4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body35"
        android:translationX="50dp"
        android:layout_toEndOf="@id/play4"
        android:text="Pause"/>

    <Button
        android:id="@+id/stop4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body35"
        android:translationX="100dp"
        android:layout_toEndOf="@id/pause4"
        android:text="Stop"/>


            <TextView
                android:id="@+id/body36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/play4"
                android:background="@color/underline"
                android:text="Whale:"
                android:fontFamily="@font/muli"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/play5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/body36"
                android:text="Play"/>

            <Button
                android:id="@+id/pause5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/body36"
                android:translationX="50dp"
                android:layout_toEndOf="@id/play4"
                android:text="Pause"/>

            <Button
                android:id="@+id/stop5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/body36"
                android:translationX="100dp"
                android:layout_toEndOf="@id/pause4"
                android:text="Stop"/>


        </RelativeLayout>
    </ScrollView>
