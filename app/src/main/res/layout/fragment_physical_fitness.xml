<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhysicalFitnessFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textsecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:fontFamily="@font/muli_black"
        android:text="PHYSICAL FITNESS"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                >

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >


            <android.widget.Button
                android:id="@+id/shortExercisesBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonback"
                android:text="Short Exercises"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                />



            <android.widget.Button
                android:id="@+id/lengthyExercisesBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonback"
                android:text="lengthy exercises"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:textSize="24sp"
                android:textStyle="bold" />


            <android.widget.Button
                android:id="@+id/bmiCalculatorBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonback"
                android:text="BMI Calculator"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/elderlyExerciseBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonback"
                android:text="Elderly Exercises"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/stepsCounterBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonback"
                android:text="Steps Counter"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>