                android:src="@drawable/c1" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView1"
                android:background="@color/underline"
                android:text="Good for: Lower Body

\nDescription: Lower yourself until you gently touch the chair and then stand back up, remembering to breathe. Repeat. For extra points, hover just over the chair for 30 seconds.
\nTime: 1 minute
\nCalorie Burned: 20 calories"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="italic" />

            <View
                android:id="@+id/u1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
